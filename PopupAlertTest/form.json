{
    "actions": [
        {
            "type": "PopupAlert",
            "name": "ErrorPopup",
            "visible": true,
            "popup": {
                "buttons": [
                    {
                        "caption": "No, stop it!",
                        "onClick": "PAT_Stop($id);"
                    }
                ],
                "items": [
                    {
                        "type": "Label",
                        "caption": "Some errors occur.....in 10 seconds.\r\nPlease press OK and switch to another Tab!"
                    }
                ]
            }
        },
        {
            "type": "PopupAlert",
            "name": "TitlePopup",
            "visible": true,
            "popup": {
                "caption": "This is a title",
                "items": [
                    {
                        "type": "Label",
                        "caption": "This is content"
                    }
                ]
            }
        },
        {
            "type": "PopupAlert",
            "name": "PopupDynamic",
            "visible": false,
            "popup": {
                "items": [
                    {
                        "type": "Label",
                        "name": "DynamicLabel",
                        "caption": "This is a text"
                    }
                ]
            }
        },
        {
            "type": "PopupAlert",
            "name": "TitlePopupDynamic",
            "visible": false,
            "popup": {
                "caption": "This is a title",
                "items": [
                    {
                        "type": "Label",
                        "name": "DynamicLabelTitle",
                        "caption": "This is content"
                    }
                ]
            }
        },
        {
            "type": "Button",
            "caption": "Show Dynamic Popup",
            "onClick": "PAT_ShowPopup($id, 'PopupDynamic', 'DynamicLabel');"
        },
        {
            "type": "Button",
            "caption": "Show Dynamic Title-Popup",
            "onClick": "PAT_ShowPopup($id, 'TitlePopupDynamic', 'DynamicLabelTitle');"
        }
    ]
}